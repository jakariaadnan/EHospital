@{
    ViewData["Title"] = "Appoinment List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Appoinment List</h5>

                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>SL#</th>
                                    <th>User Name</th>
                                    <th>Address</th>
                                    <th>Phone</th>
                                    <th>Date</th>
                                    <th>Doctor</th>
                                    <th>Serial No</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var i = 1;
                                    foreach (var data in Model)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>@data.name</td>
                                            <td>@data.address</td>
                                            <td>@data.phone</td>
                                            <td>@data.date?.ToString("dd-MMM-yyyy")</td>
                                            <td>@data.doctor?.name (@data.doctor?.registrationNo)</td>
                                            <td>@data.serialNumber</td>
                                        </tr>
                                        i++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
