@*@model LogInViewModel*@
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutInitial.cshtml";
}
<div class="container mb-5" style="overflow:auto;">
    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-12 col-md-9">
            <div class="o-hidden border-0 margin_top" style="background: none">
                <div class="p-0">
                    <div class="row mb-2 mt-3">
                        <div class="col-lg-12">
                            <div style="mt-5">
                                <form class="user" asp-area="Auth" asp-controller="Account" asp-action="LogIn" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="container">
                                        <div class="main">
                                            <div class="form-group input-group mt-5" style="margin-bottom: 5px;">
                                                <input class="form-control" type="number" id="UserId" placeholder="User Name" name="Name" required>
                                            </div>

                                            <div class="form-group input-group mt-2" style="margin-bottom: 5px;">
                                                <input class="form-control" type="password" placeholder="Password" id="inputPassword" name="Password" required>
                                                <div class="input-group-append">
                                                    <span class="input-group-text"><i class="fa fa-eye" style="color:#46e8eb" id="iconPassword" onclick="showPass('show')"></i></span>
                                                </div>


                                            </div>
                                            <div class="form-group text-center">
                                                <input type="checkbox" name="RememberMe" onclick="handleClick(this)" class="ml-5 custom-control-input" id="customCheck">
                                                <label class="ml-5 custom-control-label" style="font-size: 15px;" for="customCheck">Forget Password</label>

                                            </div>
                                            <div class="form-group text-center">
                                                <button type="submit" class="btn btn-default text-center" style="background: #46e8eb;font-weight: bold;color:white; font-size:20px;">
                                                    Log In
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{

    <script type="text/javascript">

        $(document).ready(function () {
            $('#Home').empty().append('Home');
            $('#userDropdown_01').attr('href','/Public/Home/Index');
        });

        function handleClick(cb) {
            if (cb.checked == true) {
                $('#customCheck').val(true);
            } else {
                $('#customCheck').val(false);
            }
        }

        function showPass(status) {
            if (status == 'show') {
                $('#iconPassword').removeClass('fa-eye');
                $('#iconPassword').addClass('fa-eye-slash');
                $('#inputPassword').attr('type', 'text');
                $('#iconPassword').attr('onclick', `showPass('hide')`);
            }
            else {
                $('#iconPassword').removeClass('fa-eye-slash');
                $('#iconPassword').addClass('fa-eye');
                $('#inputPassword').attr('type', 'password');
                $('#iconPassword').attr('onclick', `showPass('show')`);
            }
        }

        function LogInCheckCheck() {
            var UserId = $('#UserId').val();
            var inputPassword = $('#inputPassword').val();

            if (UserId == '') {
                swal('Warning!', 'Invalid User!', 'warning');
                return false;
            }
            if (inputPassword == '') {
                swal('Warning!', 'Please Provide Password', 'warning');
                return false;
            }

            $('#LogInButton').click();

        }

    </script>
}